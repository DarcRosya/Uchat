<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="test.MainWindow"
        mc:Ignorable="d"
        Title="Uchat" Height="600" Width="500" WindowStartupLocation="CenterScreen" WindowStyle="None"  ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid Background="White">
        <Button x:Name="ExitButton" Content="X" Background="Red" BorderThickness="0" Height="25" Width="40" HorizontalAlignment="Right" VerticalAlignment="Top" Click="ExitButton_Click"/>

        <Border x:Name="LoginForm"  Margin="0 20" Height="450" Width="350" Background="WhiteSmoke"
        HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>

                <TextBlock Margin="0 40 0 0" FontWeight="Black" FontSize="35" HorizontalAlignment="Center">
                    Uchat
                </TextBlock>

                <TextBox x:Name="loginUsername" materialDesign:HintAssist.Hint="Username" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="40 60 40 0" Height="40" VerticalContentAlignment="Center"
                />

                <PasswordBox x:Name="loginPassword" materialDesign:HintAssist.Hint="Password" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                Margin="40 15 40 0" Height="40" VerticalContentAlignment="Center"
                />

                <Button x:Name="LogInButton" Margin="40 40 40 0" Content="Log in" FontSize="15" Height="40" Click="LogInButton_Click" 
                />

                <Button x:Name="ButtonToSignUpForm" Margin="40 40 40 0" Content="Sign up" Foreground="Black" FontSize="15" Height="40" 
                Background="Transparent"  BorderThickness="0" Click="ButtonToSignUp_Click"
                />

            </StackPanel>
        </Border>

        <Border x:Name="SignUpForm" Margin="0 20" Height="450" Width="350" Background="WhiteSmoke"
        HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>

                <TextBlock Margin="0 40 0 0" FontWeight="Black" FontSize="35" HorizontalAlignment="Center">
                    Uchat
                </TextBlock>

                <TextBox x:Name="signUpUsername" materialDesign:HintAssist.Hint="Username" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="40 60 40 0" Height="40" VerticalContentAlignment="Center"
                />

                <PasswordBox x:Name="signUpPassword" materialDesign:HintAssist.Hint="Password" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                Margin="40 15 40 0" Height="40" VerticalContentAlignment="Center"
                />

                <PasswordBox x:Name="signUpConfirmPassword" materialDesign:HintAssist.Hint="Confirm password" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                Margin="40 15 40 0" Height="40" VerticalContentAlignment="Center"
                />

                <Button x:Name="SignUpButton" Content="SIGN UP" Margin="40 40 40 0" Click="SignUpButton_Click" FontSize="15" Height="40"/>

                <Button x:Name="BackToLoginFormButton" Margin="40 20 40 0" Content="Already have an account?" Foreground="Black" FontSize="15" Height="40" 
                Background="Transparent"  BorderThickness="0" Click="BackToLoginFormButton_Click"
                />

            </StackPanel>
        </Border>

        <Border x:Name="ChatsPanel" Visibility="Collapsed" Background="Blue" Height="450" Width="350">
            
        </Border>
    </Grid>
</Window>