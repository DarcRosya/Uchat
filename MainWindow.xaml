<Window x:Class="Uchat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uchat"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Title="MainWindow" Height="720" Width="1280">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="windowBarGrid" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Background="#FF1A2F2A">

            </Border>

            <Button x:Name="minimizeButton"
                    Grid.Row="0" Grid.Column="1"
                    Height="17"
                    VerticalAlignment="Top"
                    Background="#FF1A2F2A"
                    Foreground="White"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    FontFamily="Segoe MDL2 Assets" 
                    FontSize="10" HorizontalAlignment="Left" Width="50">
                &#xE921;
            </Button>

            <Button x:Name="maximizeButton"
                    Grid.Row="0" Grid.Column="2"
                    Height="17"
                    VerticalAlignment="Top"
                    Background="#FF1A2F2A"
                    Foreground="White"
                    BorderThickness="0"
                    BorderBrush="Transparent"
                    FontFamily="Segoe MDL2 Assets" FontSize="10" Click="maximizeButton_Click"
    >
                &#xE922;
            </Button>

            <Button x:Name="closeButton"
                    Grid.Row="0" Grid.Column="3"
                    Height="17"
                    VerticalAlignment="Top"
                    Background="#FF1A2F2A"
                    Foreground="White"
                    BorderThickness="0"
                    BorderBrush="Transparent"
                    FontFamily="Segoe MDL2 Assets" FontSize="15" Click="closeButton_Click"
            >
                
            </Button>
        </Grid>

        <Grid x:Name="chatLayoutGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" MaxWidth="400"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="250" MaxWidth="250"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="0.8*" />
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="0"
                    HorizontalContentAlignment="Center"
                    Background="#FF00552E"
                    Foreground="White">
                1
            </Button>
            <Button Grid.Row="0" Grid.Column="1" 
                    Foreground="White"
                    Background="#FF00552E">
                2
            </Button>
            <Button Grid.Row="0" Grid.Column="3" 
                    Background="#FF00552E"
                    Foreground="White">
                3
            </Button>

            <Grid x:Name="contactMenuGrid" Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Column="0" Grid.Row="0" Background="Black" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Background="#FFAACC00">
                        Friends
                    </Button>
                    <Button Grid.Row="0" Grid.Column="1" Background="#FF003C3A"
                            Foreground="White">
                        Groups
                    </Button>
                </Grid>
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto" Background="#FFD3F3DB">
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0" Background="#FFD3F3DB">
                            Friends List
                        </Button>
                    </Grid>
                </ScrollViewer>

            </Grid >

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                </Grid>
                <TextBox x:Name="User1" Width="300"
                         HorizontalAlignment="Center">
                    Message
                </TextBox>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="chatTextBox" VerticalContentAlignment="Center">

                    </TextBox>
                    <Button x:Name="sendButton" Grid.Column="1"
                            Click="sendButton_Click"
                            Background="#FF55A630">
                        Send
                    </Button>
                </Grid>
                
            </Grid>

            <Grid Grid.Column="3" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Background="#FFD3F3DB" Grid.ColumnSpan="4">
                    Chat
                </Button>
            </Grid >

            <Grid Grid.Column="3" Grid.Row="1"
                  Background="Red">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="100"/>
                    <RowDefinition Height="5" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Button MinHeight="300" Background="#FFD3F3DB">
                            CHANNELS
                        </Button>
                    </Grid>
                </ScrollViewer>

                <GridSplitter Grid.Row="1"
                  Height="5"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Center"
                  Background="Gray"
                  ShowsPreview="True" />

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Button MinHeight="300" Background="#FFD3F3DB">
                            MEMBERS
                        </Button>
                    </Grid>
                </ScrollViewer>

            </Grid>
        </Grid>
    </Grid>
</Window>
