<Window x:Class="Uchat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uchat"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Title="MainWindow" Height="720" Width="1280">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="windowBarGrid" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Background="#FF171D25">

            </Border>

            <Button x:Name="minimizeButton"
                    Grid.Row="0" Grid.Column="1"
                    Height="17"
                    VerticalAlignment="Top"
                    BorderBrush="Transparent"
                    Background="#FF171D25"
                    Foreground="White"
                    BorderThickness="0"
                    FontFamily="Segoe MDL2 Assets" 
                    FontSize="10" HorizontalAlignment="Left" Width="50">
                &#xE921;
            </Button>

            <Button x:Name="maximizeButton"
                    Grid.Row="0" Grid.Column="2"
                    Height="17"
                    VerticalAlignment="Top"
                    Background="#FF171D25"
                    Foreground="White"
                    BorderThickness="0"
                    BorderBrush="Transparent"
                    FontFamily="Segoe MDL2 Assets" FontSize="10" Click="maximizeButton_Click"
    >
                &#xE922;
            </Button>

            <Button x:Name="closeButton"
                    Grid.Row="0" Grid.Column="3"
                    Height="17"
                    VerticalAlignment="Top"
                    Background="#FF171D25"
                    Foreground="White"
                    BorderThickness="0"
                    BorderBrush="Transparent"
                    FontFamily="Segoe MDL2 Assets" FontSize="15" Click="closeButton_Click"
            >
                
            </Button>
        </Grid>

        <Grid x:Name="chatLayoutGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" MaxWidth="400"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="250" MaxWidth="250"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="0.8*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0"
                  Background="#FF171D25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="#FF3E4047"
                        BorderThickness="0"
                        CornerRadius="3"
                        Margin="5">
                    <TextBox Background="Transparent"
                             BorderBrush="Transparent"
                             Foreground="White"
                             FontWeight="DemiBold"
                             
                             VerticalContentAlignment="Center">
                        Search
                    </TextBox>
                </Border>


            </Grid>

            <Grid Grid.Row="0" Grid.Column="1"
                  Background="#FF171D25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="0.7*" />
                    <ColumnDefinition Width="0.3*" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Chat Name Example Bruh"
                               FontSize="15"
                               Foreground="White"
                               Margin="5 4 0 0"
                               />
                    <TextBlock Text="10 members"
                               FontSize="10"
                               Foreground="#FF919191"
                               Margin="5 0 0 0"
                               />
                </StackPanel>


                <Border Grid.Column="1" 
                        Background="#FF3E4047"
                        BorderThickness="0"
                        CornerRadius="3"
                        Margin="5">
                    <TextBox Background="Transparent"
                             BorderBrush="Transparent"
                             Foreground="#FFA4A4A4"
                             FontWeight="DemiBold"
                             Text="Search"
                             HorizontalAlignment="Center"
                             VerticalContentAlignment="Center">
                    </TextBox>
                </Border>

                <Button Grid.Column="2"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Height="20"
                        Width="40">
                    ->
                </Button>
            </Grid>

            <Button Grid.Row="0" Grid.Column="3" 
                    BorderThickness="0"
                    Background="#FF171D25"
                    Foreground="White">
                3
            </Button>

            <Grid x:Name="contactMenuGrid" Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Column="0" Grid.Row="0" Background="Black" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" 
                            Background="#FF1A9FFF"
                            Foreground="White">
                        Friends
                    </Button>
                    <Button Grid.Row="0" Grid.Column="1" Background="#FF282828"
                            Foreground="White">
                        Groups
                    </Button>
                </Grid>
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto" Background="#FFD3F3DB">
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0" Foreground="White" Background="#FF333D4B">
                            Friends List
                        </Button>
                    </Grid>
                </ScrollViewer>

            </Grid >

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF171D25" Offset="1"/>
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FF5B5B5B"/>
                        <GradientStop Color="#FF858585"/>
                        <GradientStop Color="#FF383838"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                </Grid>
                <TextBox x:Name="User1" Width="500"
                         HorizontalAlignment="Left"
                         BorderThickness="0"
                         Background="Transparent"
                         Foreground="White"
                         FontSize="18">
                </TextBox>

                <Border Grid.Row="1"
                        Background="#FF373838"
                        Margin="10 0 10 10"
                        CornerRadius="5"
                    >
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>


                        <TextBox x:Name="chatTextBox" Text="Write a massage..."
                                VerticalContentAlignment="Center"
                                BorderThickness="0"
                                Foreground="#FFA4A4A4"
                                Background="Transparent">

                        </TextBox>

                        <Border Grid.Column="1"
                            CornerRadius="5"
                            Background="#FF55A630">
                            <Button x:Name="sendButton" 
                                Click="sendButton_Click"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                >
                                Send
                            </Button>
                        </Border>

                    </Grid>
                </Border>

            </Grid>

            <Grid Grid.Column="3" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Background="#FFD3F3DB">
                    Chat
                </Button>
            </Grid >

            <Grid Grid.Column="3" Grid.Row="1"
                  Background="#FF1F2936">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="100"/>
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Button MinHeight="300" Background="#FF1F2936"
                                Foreground="White">
                            MEMBERS
                        </Button>
                    </Grid>
                </ScrollViewer>

            </Grid>
        </Grid>
    </Grid>
</Window>
